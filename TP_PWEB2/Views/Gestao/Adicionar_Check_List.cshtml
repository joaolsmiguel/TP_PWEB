@model TP_PWEB2.Controllers.GestaoController.InputModel

@{
    ViewData["Title"] = "Lista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <form asp-action="Adicionar_Check_List" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-select">
            <label class="control-label">Lista de Categorias</label>
            <select class="form-control" aria-label="size 3 select example">
                <option selected>Categoria do Imovel</option>
                @foreach (var item in Model.Lista_categorias){
                    <option value="@item.CategoriaId">@item.nome</option>
                }
            </select>
            <span asp-validation-for="Lista_categorias" class="text-danger"></span>
        </div>



        <div class="form-group">
            <labelclass="control-label"> Escreva o nome da categoria que selecionou </label>
            <input asp-for="uma_categoria.nome" class="form-control" />
            <span asp-validation-for="uma_categoria" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="control-label">Item a adicionar</label>
            <input asp-for="um_item_lista.texto" class="form-control" />
            <span asp-validation-for="um_item_lista" class="text-danger"></span>
        </div>


        <div class="form-group">
            <input type="submit" value="Adicionar" class="btn btn-primary" />
        </div>
    </form>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
