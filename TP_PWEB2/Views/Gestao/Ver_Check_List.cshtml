@model TP_PWEB2.Controllers.GestaoController.InputModel

@{
    ViewData["Title"] = "Lista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <form method="get">
        <div class="form-select">
            <select name="id" aria-label="size 3 select example">
                <option selected>Categorias</option>
                @foreach (var item in Model.Lista_categorias)
                {
                    <option name="id" value="@item.CategoriaId">@item.nome</option>
                }
            </select>
        </div>

        <div class="form-group">
            <input type="submit" value="Filtrar" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>Categoria</th>
                <th>Texto Check List</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Cat_Check_List != null) {
                @foreach (var item in Model.Cat_Check_List){
                    <tr>
                        <th>@item.Categoria.nome</th>
                        <th>@item.Check.texto</th>
                    </tr>
                }
            }
            </tbody>
    </table>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
